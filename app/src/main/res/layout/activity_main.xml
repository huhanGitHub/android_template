<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textSize="22sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="记录"
            android:textSize="22sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除"
            android:textSize="22sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="点击这里办理VIP"
            android:textSize="22sp"/>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@mipmap/ic_launcher_round"/>
        </LinearLayout>
    </LinearLayout>

        <com.owen.tab.TvTabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:tabIndicatorResId="@color/black"
            app:tabIndicatorWidth="108dp"
            app:tabIndicatorHeight="15dp"
            app:tabIndicatorBackgroundColor="@color/green"
            app:tabIndicatorBackgroundHeight="3dp"
            app:tabMinWidth="160dp"
            app:tabScrollMode="fixed"
            app:tabGravity="center"
            app:tabPaddingBottom="12dp"
            app:tabTextSelectedScale="1.2"
            app:tabTexSize="22sp"
            app:tabTextColor="@color/black">

            <com.owen.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

            <com.owen.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐" />

            <com.owen.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="英雄联盟" />

            <com.owen.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王者荣耀" />

            <com.owen.tab.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和平精英" />

        </com.owen.tab.TvTabLayout>

    <GridLayout
